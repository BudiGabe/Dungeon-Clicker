<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enemy"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/Hp_Enemy"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/Hp_Enemy"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/Hp_Enemy"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintVertical_bias="0.888" />

    <ProgressBar
        android:id="@+id/Hp_Enemy"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="344dp"
        android:layout_height="25dp"
        android:progress="100"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/Status"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Status"
        android:layout_width="344dp"
        android:layout_height="293dp"
        android:text="TextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintVertical_bias="0.232" />

    <TextView
        android:id="@+id/goldAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gold: "
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/Hp_Player"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/Hp_Player" />

    <TextView
        android:id="@+id/mana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mana: "
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/Hp_Player"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/Hp_Player" />

    <ProgressBar
        android:id="@+id/Hp_Player"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="344dp"
        android:layout_height="25dp"
        android:progress="100"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/Hp_Enemy"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/Hp_Enemy"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Status"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.061" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/Hp_Player"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/Hp_Player"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/Hp_Player" />

    <Button
        android:id="@+id/magic"
        android:layout_width="344dp"
        android:layout_height="80dp"
        android:text="Magic"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/Hp_Player"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/Hp_Player"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>
